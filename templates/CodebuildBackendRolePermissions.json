{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": "secretsmanager:GetSecretValue",
      "Resource": "<SECRETS_MANAGER_ARN>"
    },
    {
      "Effect": "Allow",
      "Action": "s3:*",
      "Resource": [
        "<S3_BUILD_BUCKET>",
        "<S3_BUILD_BUCKET>/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": "ecs:RegisterTaskDefinition",
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "ecs:UpdateService",
        "ecs:DescribeServices"
      ],
      "Resource": "<ECS_SERVICE_ARN>"
    },
    {
      "Effect": "Allow",
      "Action": [
        "iam:PassRole"
      ],
      "Resource": [
        "<ECS_EXECUTION_ROLE_ARN>"
      ]
    }
  ]
}