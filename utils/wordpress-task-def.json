{
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "portMappings": [
        {
          "hostPort": $SERVER_PORT,
          "protocol": "tcp",
          "containerPort": $SERVER_PORT
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "$CLUSTER_NAME",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "$CLUSTER_NAME"
        }
      },
      "environment": [
        {
          "name": "MYSQLDB_HOST",
          "value": "$RDS_ENDPOINT"
        },
        {
          "name": "DB_NAME",
          "value": "$DB_NAME"
        },
        {
          "name": "PHP_MEMORY_LIMIT",
          "value": "512M"
        },
        {
          "name": "enabled",
          "value": "false"
        },
        {
          "name": "ALLOW_EMPTY_PASSWORD",
          "value": "yes"
        }
      ],
      "secrets": [
        {
          "name": "DB_USERNAME",
          "valueFrom": "$DB_USERNAME_DIR"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "$DB_PASSWORD_DIR"
        }
      ],
      "mountPoints": [
        {
          "containerPath": "$WORDPRESS_IMAGE",
          "sourceVolume": "wordpress"
        }
      ],
      "image": "$WORDPRESS_IMAGE",
      "essential": true,
      "name": "wordpress"
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "$VCPU",
  "memory": "$MEMORY",
  "volumes": [
    {
      "name": "wordpress",
      "efsVolumeConfiguration": {
        "fileSystemId": "$FILE_SYSTEM_ID",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "$FILE_SYSTEM_ACCESS_POINT",
          "iam": "DISABLED"
        }
      }
    }
  ],
  "family": "$CLUSTER_NAME"
}
